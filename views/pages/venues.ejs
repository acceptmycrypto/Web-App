<h1>Venues Page</h1>
<header>
  <% include ../partials/header %>
</header>

<head>    
    <% include ../partials/head %>
</head>

<body>

    <header>
		<% include ../partials/header %>
    </header>

    <main>

      <div class="limiter">
          <div class="container-modal">

        <div class="container-table100">
          <div class="wrap-table100">
              <div class="table">
                <div class="row header">
                  <div class="cell">
                    Venues
                  </div>
                  <div class="cell">
                    Description
                  </div>
                  <div class="cell">
                    Accepted Cryptos
                  </div>
                </div>

                <div class="row">
                  <div class="cell" data-title="Crypto">
                    Overstock
                  </div>
                  <div class="cell" data-title="Symbol">
                    Description Goes Here
                  </div>
                  <div class="cell" data-title="Price">
                    Bitcoin, Ethereum
                  </div>
                </div>

              </div>
          </div>

          <button id="modalBtn" class="button">Click Here</button>
            <div id="simpleModal" class="modal">
              <div class="modal-content">
                <div class="modal-header">
                    <span class="closeBtn">&times;</span>
                </div>
                <div class="modal-body">
                  <form method="POST" action="/venues/create">
                    <input type="text" name="user_email" placeholder="Enter Your Email Address"> <br>
                    <input type="text" name="crypto_name" placeholder="Crypto"> <br>
                    <input type="text" name="venue" placeholder="Venue Name"> <br>
                    <input type="text" name="venue_link" placeholder="Venue Website"> <br>
                    <button>submit</button>
                  </form>
                </div>
                </div>
              </div>
            </div>
        </div>        
        </div>        

    </main>
    
    <footer>
        <% include ../partials/footer %>
    </footer>
	
    <script src="/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/javascript/modal.js"></script>

</body>
</html>