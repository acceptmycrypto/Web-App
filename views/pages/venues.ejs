<head>
  <% include ../partials/head %>
</head>

<body>

  <header>
    <% include ../partials/header %>
  </header>

  <main>

    <div class="limiter">
      <div class="container-modal">

        <div class="container-table100">
          <div class="wrap-table100">
            <div class="table">
              <div class="row header">
                <div class="cell">
                  Venues
                </div>
                <div class="cell">
                  Description
                </div>
                <div class="cell">
                  Crypto Accepting
                </div>
              </div>
            </div>
          </div>

          <button id="modalBtn" class="button">Click Here</button>
          <div id="simpleModal" class="modal">
            <div class="modal-content">
              <div class="modal-header">
                <span class="closeBtn">&times;</span>
              </div>
              <div class="modal-body">
                <form method="POST" action="/venues/create">
                  <input type="text" name="user_email" placeholder="Enter Your Email Address"> <br>
                  <input type="text" name="crypto_name" placeholder="Crypto"> <br>
                  <input type="text" name="venue" placeholder="Venue Name"> <br>
                  <input type="text" name="venue_link" placeholder="Venue Website"> <br>
                  <button>submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </main>
  <form method="POST" action="/venues/search">
    <input type="text" name="venue_name" placeholder="Search Venue">
    <button>Search</button>
  </form>
  <footer>
    <% include ../partials/footer %>
  </footer>

  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  <script src="/assets/javascript/modal.js"></script>
  <script src="/assets/javascript/venues.js"></script>

</body>